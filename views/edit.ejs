<% include partials/header %>

<div class="ui main text container">
    <form class="ui form" action="/recipes/<%= recipe.id %>?_method=PUT" method="POST">

        <div class="ui huge header">Edit <%= recipe.name %> </div>

        <div class="field">
            <label>Name</label>
            <input type="text" name="recipe[name]" value="<%= recipe.name %>">
        </div>

        <div class="field">
            <label>Image</label>
            <input type="text" name="recipe[image]" value="<%= recipe.image %>">
        </div>

        <div class="field">
            <label>Description</label>
            <textarea name="recipe[description]"> <%= recipe.description %> </textarea>
        </div>

        <div class="field">
                <label>Ingredients</label>
                <textarea name="recipe[preparation]"> <%= recipe.ingredients %> </textarea>
        </div>

        <div class="field">
                <label>Preparation</label>
                <textarea name="recipe[ingredients]"> <%= recipe.preparation %> </textarea>
        </div>

        <div class="field">
            <label>Difficulty</label>
            <select class="ui dropdown" name="recipe[difficulty]">
                    <option value="Easy">Easy</option>
                    <option value="Medium">Medium</option>
                    <option value="Hard">Hard</option>
                    <option value="Very Hard"> Very Hard</option>
            </select>
        </div>

        <div class="field">
            <label>Time for cooking</label>
            <input type="text" name="recipe[time]" value="<%= recipe.time %>">
        </div>

        <button class="ui button" type="submit">Submit</button>
    </form>
</div>

<% include partials/footer %>